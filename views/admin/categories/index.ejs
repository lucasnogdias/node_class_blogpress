<%- include ('../../partials/header.ejs') %>
<%- include ('../../partials/navbar.ejs') %>

<div class="container">
  <hr>
  <h2>Categories</h2>
  <a class="btn btn-success" href="/admin/categories/new">Create New Category</a>
  <hr>
  <table class="table">
    <thead>
      <tr>
        <th>ID</th>
        <th>Title</th>
        <th>Slug</th>
        <th>Actions</th>
      </tr>
    </thead>
    <tbody>
      <% categories.forEach(cat => { %>
        <tr>
          <td><%= cat.id %></td>
          <td><%= cat.title %></td>
          <td><%= cat.slug %></td>
          <td>
            <a class="btn btn-warning" href="/admin/categories/edit/<%= cat.id %>">Edit</a>
            <form method="POST" action="/categories/delete" style="display : inline" onSubmit="confirmDelete(event, this)">
              <input type="hidden" name="id" value="<%= cat.id %>">
              <button class="btn btn-danger">Delete</button>
            </form>
          </td>
        </tr>
      <% }); %>
    </tbody>
  </table>
</div>

<%- include ('../../partials/footer.ejs') %>

<script>
  function confirmDelete(evt, form){
    evt.preventDefault();
    console.log("holding back the form");
    if (confirm("Do you want to delete this category?")){
      form.submit();
    } else {
      console.log("No, that's good");
    }
  }
</script>